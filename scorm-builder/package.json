{
  "name": "scorm-builder",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "build:with-tests": "tsc && vite build",
    "build:prod": "node scripts/build-production.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "check": "npm run lint & npm run type-check",
    "preview": "vite preview",
    "preview:prod": "vite preview --config vite.config.prod.ts",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "build:portable": "node build-portable-package.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run src/tests/integration",
    "test:integration:watch": "vitest src/tests/integration",
    "test:all": "vitest run && npm run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fake-indexeddb": "^6.0.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.3",
    "tdd-guard": "^0.3.1",
    "terser": "^5.43.1",
    "tsx": "^4.20.3",
    "vite-plugin-compression2": "^2.2.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-dialog": "^2.3.1",
    "@tauri-apps/plugin-fs": "^2.4.0",
    "@types/jszip": "^3.4.0",
    "@types/react": "^19.1.8",
    "@vitejs/plugin-react": "^4.6.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "jszip": "^3.10.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4"
  }
}
