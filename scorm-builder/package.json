{
  "name": "scorm-builder",
  "version": "1.0.0",
  "type": "module",
  "description": "Modern SCORM package builder with React 19, Vite 6, and Tauri. See DEPENDENCY_STRATEGY.md for version rationale.",
  "scripts": {
    "dev": "vite",
    "dev:bdd": "vite --config vite.config.bdd.ts",
    "build": "tsc && vite build",
    "build:debug": "cross-env VITE_DEBUG_LOGS=true tsc && vite build --config vite.config.prod.ts",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "cross-env VITE_DEBUG_LOGS=true tauri build",
    "clean:cache": "rimraf node_modules/.vite node_modules/.cache dist",
    "clean:start": "npm run clean:cache && npm run build && npm run tauri:dev",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "test:fast": "vitest --run --reporter=dot",
    "test:smoke": "vitest --run --reporter=dot \"src/**/*{.smoke,.critical}*.test.{ts,tsx}\"",
    "test:unit": "vitest --run --reporter=verbose --exclude=\"**/*{integration,behavior,e2e}*\"",
    "test:integration": "vitest --run --reporter=verbose \"**/*integration*.test.{ts,tsx}\"",
    "coverage:report": "node scripts/analyze-coverage.js",
    "coverage:check": "node scripts/check-coverage-threshold.js",
    "lint": "eslint src/ --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install .husky",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:bdd": "node --import tsx node_modules/@cucumber/cucumber/bin/cucumber.js --config cucumber.config.mjs",
    "test:bdd:ci": "npx cucumber-js --config cucumber.ci.mjs",
    "test:bdd:stable": "npx cucumber-js --config cucumber.mjs --tags @stable",
    "test:bdd:debug": "npx cucumber-js --config cucumber.mjs --tags @debug",
    "test:bdd:headed": "cross-env HEADLESS=false npx cucumber-js --config cucumber.mjs",
    "test:bdd:browser": "node tests/bdd/run-browser-tests.js",
    "test:bdd:watch": "cross-env NODE_ENV=test BASE_URL=http://localhost:1421 npx cucumber-js --config cucumber.mjs",
    "test:bdd:single": "cross-env NODE_ENV=test BASE_URL=http://localhost:1421 tsx ./node_modules/@cucumber/cucumber/bin/cucumber.js --config cucumber.mjs",
    "validate-scorm": "tsx src/utils/validateScormCLI.ts",
    "test:bdd:e2e": "npm run test:bdd:browser -- --tags @e2e",
    "test:bdd:working": "npm run test:bdd:browser -- --tags @working",
    "test:bdd:course-seed": "npm run test:bdd:browser -- --tags @course-seed",
    "test:ai-ui": "playwright test ai-ui-analysis.spec.ts --reporter=list,json",
    "test:ai-ui:headed": "playwright test ai-ui-analysis.spec.ts --headed --reporter=list",
    "report:ai": "node scripts/generate-ai-report.js",
    "analyze:ui": "npm run test:ai-ui && npm run report:ai",
    "analyze:ui:quick": "playwright test ai-ui-analysis.spec.ts --grep=\"Complete workflow\" && npm run report:ai",
    "test:ai-working": "playwright test working-ai-analysis.spec.ts --reporter=list",
    "test:ai-working:headed": "playwright test working-ai-analysis.spec.ts --headed --reporter=list",
    "test:validation": "playwright test quick-validation.spec.ts --reporter=list",
    "test:validation:headed": "playwright test quick-validation.spec.ts --headed --reporter=list",
    "test:comprehensive": "playwright test comprehensive-ai-analysis.spec.ts --reporter=list,json",
    "test:comprehensive:headed": "playwright test comprehensive-ai-analysis.spec.ts --headed --reporter=list",
    "test:suite:all": "playwright test complete-user-journey.spec.ts performance-testing.spec.ts accessibility-and-responsive.spec.ts --reporter=list,json"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-dialog": "^2.3.1",
    "@tauri-apps/plugin-fs": "^2.4.0",
    "@types/jszip": "^3.4.1",
    "@types/react": "^19.1.11",
    "@vitejs/plugin-react": "^5.0.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.9",
    "highlight.js": "^11.11.1",
    "html2canvas": "^1.4.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.525.0",
    "marked": "^16.1.1",
    "quill": "^2.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-router-dom": "^7.2.0",
    "react-toastify": "^11.0.3",
    "uuid": "^11.0.5",
    "vite": "^7.1.3",
    "vite-plugin-pwa": "^1.0.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.1",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@eslint/js": "^9.20.0",
    "@playwright/test": "^1.50.1",
    "@tauri-apps/cli": "^2.5.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.2.0",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^4.1.11",
    "tdd-guard": "^0.6.0",
    "terser": "^5.43.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3",
    "vite-plugin-compression2": "^2.2.0",
    "vitest": "^3.2.4"
  }
}
