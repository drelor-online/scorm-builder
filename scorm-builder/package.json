{
  "name": "scorm-builder",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:bdd": "vite --config vite.config.bdd.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:bdd": "npx cucumber-js --config cucumber.mjs",
    "test:bdd:ci": "npx cucumber-js --config cucumber.ci.mjs",
    "test:bdd:stable": "npx cucumber-js --config cucumber.mjs --tags @stable",
    "test:bdd:debug": "npx cucumber-js --config cucumber.mjs --tags @debug",
    "test:bdd:headed": "cross-env HEADLESS=false npx cucumber-js --config cucumber.mjs",
    "test:bdd:browser": "node tests/bdd/run-browser-tests.js",
    "test:bdd:watch": "cross-env NODE_ENV=test BASE_URL=http://localhost:1421 npx cucumber-js --config cucumber.mjs",
    "test:bdd:single": "cross-env NODE_ENV=test BASE_URL=http://localhost:1421 npx cucumber-js --config cucumber.mjs",
    "test:bdd:e2e": "npm run test:bdd:browser -- --tags @e2e",
    "test:bdd:working": "npm run test:bdd:browser -- --tags @working",
    "test:bdd:course-seed": "npm run test:bdd:browser -- --tags @course-seed"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-dialog": "^2.3.1",
    "@tauri-apps/plugin-fs": "^2.4.0",
    "@types/jszip": "^3.4.0",
    "@types/react": "^19.1.8",
    "@vitejs/plugin-react": "^4.6.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "framer-motion": "^11.19.1",
    "highlight.js": "^11.11.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.478.1",
    "marked": "^17.0.3",
    "quill": "^2.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.2.0",
    "react-toastify": "^11.0.3",
    "uuid": "^11.0.5",
    "vite": "^6.0.7"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.1",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@eslint/js": "^9.20.0",
    "@playwright/test": "^1.50.1",
    "@tauri-apps/cli": "^2.5.0",
    "@types/dompurify": "^3.3.1",
    "@types/node": "^22.13.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^9.5.0",
    "@typescript-eslint/parser": "^9.5.0",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.41.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.20.0",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.5.7",
    "terser": "^5.43.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "vite-plugin-compression2": "^2.2.0",
    "vitest": "^3.2.4"
  }
}