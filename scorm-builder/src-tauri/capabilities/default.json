{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-close",
    "opener:default",
    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-write-file",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/scorm-builder" },
        { "path": "$APPDATA/scorm-builder/**" },
        { "path": "$DOCUMENT/SCORM Projects" },
        { "path": "$DOCUMENT/SCORM Projects/**" }
      ]
    }
  ]
}
